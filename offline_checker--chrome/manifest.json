{
  "manifest_version": 2,
  "name": "Offline Checker",
  "version": "0.1",
  "description": "Know when you're offline and back online with color cues.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "scripts": ["network.js"]
  }
}
